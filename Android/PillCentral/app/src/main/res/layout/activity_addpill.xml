<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addpill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.pillcentral.addpill">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/nametxt"
        android:layout_alignParentStart="true"
        android:id="@+id/pilltxt"
        android:layout_alignParentEnd="true" />

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="6"
        android:progress="0"
        android:layout_below="@+id/daytxt"
        android:layout_alignParentStart="true"
        android:id="@+id/seekBar"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Pill Name:"
        android:id="@+id/nametxt"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayofweek"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textSize="25sp" />

    <Button
        android:text="Set Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settime"
        android:layout_below="@+id/dayofweek"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:onClick="onclick" />

    <TextView
        android:text="Dosage (mg):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dosagetxt"
        android:layout_below="@+id/pilltxt"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/dosagetxt"
        android:layout_alignParentStart="true"
        android:id="@+id/dosage" />

    <TextView
        android:text="Day of the week:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daytxt"
        android:layout_below="@+id/dosage"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Pill Box Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settime"
        android:layout_alignParentStart="true"
        android:id="@+id/loctxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/loctxt"
        android:id="@+id/loc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Submit"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:id="@+id/Submit"
        android:layout_below="@+id/loc"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:onClick="onclick" />

    <TextView
        android:text="00:00"
        android:layout_width="wrap_content"
        android:id="@+id/timeset"
        android:textSize="30sp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/AMPM"
        android:layout_alignBottom="@+id/AMPM"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="AM"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/AMPM"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/dosage" />

</RelativeLayout>
