<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addpill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.pillcentral.addpill">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/nametxt"
        android:layout_alignParentStart="true"
        android:id="@+id/pilltxt"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Pill Name:"
        android:id="@+id/nametxt"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Dosage (mg):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dosagetxt"
        android:layout_below="@+id/pilltxt"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/dosagetxt"
        android:layout_alignParentStart="true"
        android:id="@+id/dosage" />

    <TextView
        android:text="Day of the week:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daytxt"
        android:layout_below="@+id/dosage"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="00:00"
        android:layout_width="wrap_content"
        android:id="@+id/timeset"
        android:textSize="30sp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/AMPM"
        android:layout_alignBottom="@+id/AMPM"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="AM"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/AMPM"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/dosage" />

    <Button
        android:text="Submit"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/Submit"
        android:textSize="25sp"
        android:onClick="onclick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp" />

    <Button
        android:text="Set Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settime"
        android:onClick="onclick"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/nametxt" />

    <TextView
        android:text="Pill Box Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loctxt"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/settime"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tues"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/daytxt"
        android:layout_toEndOf="@+id/loctxt" />

    <CheckBox
        android:text="S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sun"
        android:layout_alignBaseline="@+id/mon"
        android:layout_alignBottom="@+id/mon"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mon"
        android:layout_alignBaseline="@+id/tues"
        android:layout_alignBottom="@+id/tues"
        android:layout_alignStart="@+id/Submit" />

    <CheckBox
        android:text="T"
        android:id="@+id/thurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/wed"
        android:layout_alignBottom="@+id/wed"
        android:layout_toEndOf="@+id/timeset" />

    <CheckBox
        android:text="F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fri"
        android:layout_alignBaseline="@+id/thurs"
        android:layout_alignBottom="@+id/thurs"
        android:layout_alignEnd="@+id/Submit" />

    <CheckBox
        android:text="S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sat"
        android:layout_alignBaseline="@+id/fri"
        android:layout_alignBottom="@+id/fri"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/loc"
        android:layout_below="@+id/loctxt"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wed"
        android:layout_alignBaseline="@+id/tues"
        android:layout_alignBottom="@+id/tues"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
