<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_singlepilldisplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.pillcentral.singlepilldisplay">

    <TextView
        android:text="Pill Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pilllocal"
        android:layout_below="@+id/pillname"
        android:layout_alignStart="@+id/taketime"
        android:layout_marginTop="12dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar4"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/taketime"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Take at: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taketime"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/pilllocal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Pill Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pillname"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/pilllocal" />

</RelativeLayout>
