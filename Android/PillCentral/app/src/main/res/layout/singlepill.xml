<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pillname"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Pill Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/pillname" />

    <TextView
        android:text="Take at:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"
        android:id="@+id/textView16" />

    <TextView
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/local"
        android:layout_below="@+id/pillname"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="Pillbox:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_above="@+id/taketime"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:text="12:00 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taketime"
        android:layout_below="@+id/local"
        android:layout_alignStart="@+id/local" />

    <TextView
        android:text="Dosage:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView11"
        android:layout_alignStart="@+id/textView16"
        android:id="@+id/textView10" />

    <TextView
        android:text="50 mg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignStart="@+id/local"
        android:id="@+id/dosage" />
</RelativeLayout>