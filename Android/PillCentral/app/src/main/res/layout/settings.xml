<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Number of Boxes:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="66dp"
        android:id="@+id/textView13"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:enabled="false"
        android:id="@+id/boxes"
        android:text="00"
        android:layout_width="30dp"
        android:textSize="18sp"
        android:layout_marginStart="27dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:text="Alert Time (minutes):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/alerttime"
        android:layout_alignBottom="@+id/alerttime"
        android:layout_alignEnd="@+id/textView18" />

    <TextView
        android:text="Box ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:textSize="20sp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/boxes"
        android:layout_toStartOf="@+id/boxes" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="A05FP"
        android:ems="10"
        android:enabled="false"
        android:id="@+id/boxid"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView18"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignStart="@+id/boxes" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:enabled="false"
        android:id="@+id/alerttime"
        android:text="15"
        android:layout_below="@+id/boxid"
        android:layout_alignStart="@+id/boxid"
        android:layout_marginTop="26dp" />

    <Button
        android:text="Profile Settings"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/profilebtn"
        android:layout_below="@+id/alerttime"
        android:layout_alignEnd="@+id/boxes"
        android:layout_marginTop="25dp" />

</RelativeLayout>
